{
  "name": "@material-kit/lib",
  "version": "0.5.0",
  "description": "UI toolkit for building web apps with Material Design",
  "keywords": [
    "material-kit",
    "material",
    "material-design",
    "material-components",
    "web",
    "css",
    "scss"
  ],
  "homepage": "https://www.webdenim.io/material-kit/",
  "bugs": {
    "url": "https://github.com/webdenim/material-kit/issues"
  },
  "license": "MIT",
  "author": "Webdenim",
  "files": [
    "components/**/*.scss",
    "dist/**/*.css"
  ],
  "main": "material-kit.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webdenim/material-kit.git"
  },
  "scripts": {
    "clean": "del-cli _site/** dist/**",
    "build": "npm run clean && webpack -p && cross-env JEKYLL_ENV=production bundler exec jekyll build",
    "deploy": "push-dir --dir=_site --branch=gh-pages --cleanup",
    "dev": "npm run clean && parallelshell \"npm run docs:webpack\" \"npm run docs:jekyll\"",
    "docs:jekyll": "bundler exec jekyll serve --config _config.yml,_config.dev.yml",
    "docs:webpack": "webpack --watch",
    "fix": "stylelint --fix components/**/*.scss",
    "lint": "stylelint components/**/*.scss",
    "release": "standard-version --tag-prefix",
    "start": "npm run dev",
    "test": "echo TODO: make tests"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.1.0",
    "css-loader": "^0.28.7",
    "del-cli": "^1.1.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "node-sass": "^4.6.1",
    "parallelshell": "^3.0.2",
    "push-dir": "^0.4.1",
    "sass-loader": "^6.0.6",
    "standard-version": "^4.2.0",
    "stylelint-config-material-kit": "^1.0.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "material-components-web": "^0.28.0",
    "reset-css": "^2.2.1"
  },
  "peerDependencies": {
    "material-components-web": "^0.28.0"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ]
  }
}
